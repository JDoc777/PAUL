  Serial3.print("Accel X: "); Serial.print(accelX_g, 3);  // Print with 3 decimal places
  Serial3.print(" | Y: "); Serial.print(accelY_g, 3);
  Serial3.print(" | Z: "); Serial.println(accelZ_g, 3);
  
